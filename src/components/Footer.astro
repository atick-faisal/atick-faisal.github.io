---
import { Mail, Github, Linkedin, GraduationCap, Facebook } from 'lucide-astro';
---

<footer class="bg-surface-light dark:bg-surface-dark border-t border-border-light dark:border-border-dark mt-20">
    <div class="container mx-auto px-6 py-12">
        <!-- Contact Links -->
        <div class="flex flex-wrap justify-center gap-6 mb-8">
            <a
                href="mailto:atickfaisal@gmail.com"
                class="footer-link inline-flex items-center gap-2 text-text-light dark:text-text-dark hover:bg-hover-light dark:hover:bg-hover-dark transition-colors duration-200"
                style="border-radius: 1.2rem; padding: 0.375rem 1.5rem;"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Email"
            >
                <Mail size={20} />
                <span>Email</span>
            </a>

            <a
                href="https://github.com/atick-faisal"
                class="footer-link inline-flex items-center gap-2 text-text-light dark:text-text-dark hover:bg-hover-light dark:hover:bg-hover-dark transition-colors duration-200"
                style="border-radius: 1.2rem; padding: 0.375rem 1.5rem;"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="GitHub"
            >
                <Github size={20} />
                <span>GitHub</span>
            </a>

            <a
                href="https://www.linkedin.com/in/atick-faisal/"
                class="footer-link inline-flex items-center gap-2 text-text-light dark:text-text-dark hover:bg-hover-light dark:hover:bg-hover-dark transition-colors duration-200"
                style="border-radius: 1.2rem; padding: 0.375rem 1.5rem;"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="LinkedIn"
            >
                <Linkedin size={20} />
                <span>LinkedIn</span>
            </a>

            <a
                href="https://scholar.google.com/citations?user=p4I3Sa0AAAAJ&hl=en"
                class="footer-link inline-flex items-center gap-2 text-text-light dark:text-text-dark hover:bg-hover-light dark:hover:bg-hover-dark transition-colors duration-200"
                style="border-radius: 1.2rem; padding: 0.375rem 1.5rem;"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Google Scholar"
            >
                <GraduationCap size={20} />
                <span>Google Scholar</span>
            </a>

            <a
                href="https://www.facebook.com/atick.faisal/"
                class="footer-link inline-flex items-center gap-2 text-text-light dark:text-text-dark hover:bg-hover-light dark:hover:bg-hover-dark transition-colors duration-200"
                style="border-radius: 1.2rem; padding: 0.375rem 1.5rem;"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Facebook"
            >
                <Facebook size={20} />
                <span>Facebook</span>
            </a>
        </div>

        <!-- Copyright -->
        <div class="text-center text-text-muted-light dark:text-text-muted-dark">
            <p>&copy; {new Date().getFullYear()} Atick Faisal. All rights reserved.</p>
        </div>
    </div>
</footer>

<style>
    .footer-link {
        font-weight: 500;
    }
</style>
