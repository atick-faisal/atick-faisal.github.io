---
import { Mail } from 'lucide-astro';
import bioBgLight from '../assets/bio-bg.webp';
import bioBgDark from '../assets/bio-bg-dark.webp';
import profileImage from '../assets/atick.webp';
---

<section class="container mx-auto px-6 py-16">
    <div class="relative rounded-3xl overflow-hidden shadow-2xl">
        <!-- Background images with dark mode toggle -->
        <div class="absolute inset-0 dark:hidden">
            <img
                src={bioBgLight.src}
                alt=""
                class="w-full h-full object-cover"
            />
        </div>
        <div class="absolute inset-0 hidden dark:block">
            <img
                src={bioBgDark.src}
                alt=""
                class="w-full h-full object-cover"
            />
        </div>

        <!-- Content -->
        <div class="relative z-10 grid md:grid-cols-2 gap-8 items-center p-8 md:p-12 lg:p-16">
            <!-- Left side - Text content -->
            <div class="space-y-6">
                <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white">
                    Hello! I'm<br />
                    <span class="text-gray-900 dark:text-white">Atick Faisal</span>
                </h2>
                <p class="text-lg text-gray-800 dark:text-gray-200 leading-relaxed">
                    Machine Learning Researcher, Robotic Enthusiast and Software Developer.
                    Currently working as a Research Assistant at Qatar University
                </p>
                <div>
                    <a
                        href="#footer"
                        class="btn btn-primary inline-flex items-center gap-2"
                    >
                        <Mail size={20} />
                        Get in Touch
                    </a>
                </div>
            </div>

            <!-- Right side - Profile image -->
            <div class="flex justify-center md:justify-end">
                <img
                    src={profileImage.src}
                    alt="Atick Faisal"
                    class="w-64 md:w-80 lg:w-96 h-auto rounded-2xl -scale-x-100"
                />
            </div>
        </div>
    </div>
</section>
