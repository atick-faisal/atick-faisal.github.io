---
/**
 * Back to Top Component
 *
 * Simple link button that scrolls user back to the top of the page.
 */
import { ArrowUp } from 'lucide-astro';
import { ICON_SIZES } from '../constants/ui';
---

<div class="container mx-auto px-6 py-8 flex justify-center">
    <a href="#top" class="btn btn-secondary inline-flex items-center gap-2">
        <ArrowUp size={ICON_SIZES.MD} />
        Back to Top
    </a>
</div>
